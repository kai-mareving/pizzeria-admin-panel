{
  "name": "pizzeria-admin-panel",
  "version": "0.1.0",
  "description": "Administrative panel for pizzeria staff",
  "private": true,
  "homepage": "/panel/",
  "scripts": {
    "start": "run-p start:* ",
    "start-silent": "run-p start > /dev/null",
    "start:react": "react-scripts start",
    "start:api": "yarn build && node server.js",
    "start-and-test": "run-p start-silent test ",
    "build": "react-scripts build",
    "lint": "esw --watch --clear",
    "test": "react-scripts test --noStackTrace",
    "test-all": "react-scripts test --watchAll=false --noStackTrace",
    "test-related": "react-scripts test --watchAll=false --noStackTrace --findRelatedTests",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-syntax-class-properties": "^7.12.13",
    "@material-ui/core": "^4.12.3",
    "@material-ui/data-grid": "^4.0.0-alpha.37",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.15.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "json-server": "^0.17.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "package.json": "^2.0.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-flexbox-grid": "^2.1.2",
    "react-redux": "^7.1.1",
    "react-router": "^6.0.2",
    "react-router-dom": "^5.1.0",
    "react-router-transition": "^2.1.0",
    "react-scripts": "3.1.2",
    "react-test-renderer": "^16.9.0",
    "redux": "^4.0.4",
    "typescript": "4.3.0-dev.20210510"
  },
  "devDependencies": {
    "eslint-watch": "6.0.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.4.0",
    "redux-devtools-extension": "^2.13.9"
  },
  "repository": "https://github.com/kai-mareving/pizzeria-admin-panel.git",
  "author": "Kai Mareving <karska.joanna@gmail.com>",
  "license": "MIT"
}
